---
// 必要なアセットとコンポーネントをインポート
import PageLayout from "@/layouts/Base.astro";
import SocialList from "@/components/SocialList.astro";

const meta = {
  description: "履歴書ページ - MarinKresic ブログ",
  title: "履歴書",
};

// 履歴書の詳細（学歴、経験、スキルなど）を追加
const resumeData = {
  education: [
    {
      degree: "コンピュータサイエンス学士 - システム工学のサブ専攻",
      institution: "Algebra Bernays University",
      year: "2023年 - 現在",
    },
    {
      degree: "コンピュータ技術者",
      institution: "Tehnička škola Ruđer Bošković",
      year: "2017年卒業",
    },
  ],
  experience: [
    {
      role: "ITサービスデスク",
      company: "Raiffeisen Bank Croatia",
      duration: "2024年12月 - 現在",
      description: "",
    },
    {
      role: "システム管理者インターン",
      company: "Ericsson Nikola Tesla",
      duration: "2017年5月 - 2017年9月",
      description: "• サーバーインフラの管理と保守の実践経験を習得。設定、監視、トラブルシューティングを含む。習得スキル: サーバー管理、システム管理、ネットワーキング、トラブルシューティング、ITサポート。",
    },
  ],
  certification: [
    {
      name: "Cisco認定ネットワークアドミニストレーター – CCNA",
      company: "Cisco",
      duration: "2017年",
    },
    {
      name: "Ciscoネットワーク基礎",
      company: "Cisco",
      duration: "2024年",
    },
    {
      name: "Fortinetサイバーセキュリティエキスパートレベル3: 認定アソシエイト",
      company: "Fortinet",
      duration: "2024年",
    },
    {
      name: "Microsoft認定Azure基礎 AZ-900",
      company: "Microsoft",
      duration: "2024年",
    },
    {
      name: "Microsoft応用スキル: Active Directoryドメインサービスの管理",
      company: "Microsoft",
      duration: "2024年",
    },
  ],
  skills: [
    "システム管理 (Windows Server & RHEL Linux)",
    "ネットワークルーティングとスイッチング",
    "FortiNetファイアウォール",
    "Microsoft Azure",
    "Powershellスクリプティング / シェルスクリプティング (BASH)",
    "Ansible",
    "Python",
    "SQL/NoSQLデータベース",
    "CI/CD, Git",
    "Docker & Kubernetes / 仮想化技術",
  ],
};
---

<PageLayout meta={meta}>
  <div class="space-y-8">
    <h1 class="title text-3xl font-bold">履歴書 - Marin Krešić</h1>
    <p>ザグレブ, クロアチア - marinjurekresic@gmail.com</p>
    <section>
        <h2 class="text-2xl font-semibold mb-2">職務経験</h2>
        <ul class="list-disc pl-5 space-y-2">
          {resumeData.experience.map(({ role, company, duration, description }) => (
            <li>
              <strong class="text-xl">{role}</strong> - <span class="font-bold text-lg">{company}</span><br />
              <span class="text-gray-500">({duration})</span><br />
              <span class="italic text-gray-500">{description}</span>
            </li>
          ))}
        </ul>
      </section>
    <section>
      <h2 class="text-2xl font-semibold mb-2">学歴</h2>
      <ul class="list-disc pl-5 space-y-2">
        {resumeData.education.map(({ degree, institution, year }) => (
          <li>
            <strong class="text-xl">{degree}</strong><br />
            <span class="text-gray-500">{institution}</span> <span class="text-gray-500">({year})</span>
          </li>
        ))}
      </ul>
    </section>

    <section>
        <h2 class="text-2xl font-semibold mb-2">認定資格</h2>
        <ul class="list-disc pl-5 space-y-2">
          {resumeData.certification.map(({ name, company, duration }) => (
            <li>
              <strong class="text-xl">{name}</strong> - <span class="font-semibold">{company}</span> <span class="text-gray-400">({duration})</span><br />
            </li>
          ))}
        </ul>
      </section>

    <section>
      <h2 class="text-2xl font-semibold mb-2">スキル</h2>
      <ul class="list-disc pl-5 space-y-2">
        {resumeData.skills.map(skill => (
          <li class="">{skill}</li>
        ))}
      </ul>
    </section>
    <div class="mt-8">
      <a target="_blank" href="/MarinKresic_CV.pdf" class="tag text-white px-4 py-2 rounded">
        📥 履歴書をダウンロード (PDF)
      </a>
    </div>
    <section class="mt-16">
      <SocialList />
    </section>
  </div>
</PageLayout>